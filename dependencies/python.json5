{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "dependencies: python",
  packageRules: [
    {
      description: "python: disable automerge",
      matchDepNames: ["python"],
      matchUpdateTypes: ["major", "minor"],
      automerge: false,
    },
    {
      description: "python: versioning",
      matchDepNames: ["python"],
      rangeStrategy: "bump",
    },
  ],
}
